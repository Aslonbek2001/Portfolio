[Unit]
Description=Portfolio FastAPI app
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/portfolio
Environment="PATH=/opt/portfolio/env/bin"
ExecStart=/opt/portfolio/env/bin/uvicorn main:app --host 127.0.0.1 --port 8001
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
